
<%= form_for (@contact) do |f| %>
<table>
<tr>
  <td>
   <%= f.label :name %>
  </td>
  <td>
   <%= f.text_field :name %>
  </td>
</tr>
<tr>
  <td>
   <%= f.label :email %>
  </td>
  <td>
    <%= f.text_field :email %>
  </td>
</tr>
<tr>
  <td>
   <%= f.label :phone %>
  </td>
  <td>
   <%= f.text_field :phone %>
  </td>
</tr>
<tr>
  <td>
    <%= f.label :address %>
  </td>
  <td>
   <%= f.text_field :address %>
  </td>
</tr>
</table>
<div class="actions" style="text-align: center;position: fixed;top: 33%;left: 7%;">
  <%= f.submit %>
</div>

<% end %>
